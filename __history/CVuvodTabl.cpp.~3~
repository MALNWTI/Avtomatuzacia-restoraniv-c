//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "CVuvodTabl.h"
#include "CTab.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma link "DBAccess"
#pragma link "MemDS"
#pragma link "Uni"
#pragma resource "*.fmx"
TVuvodTabl *VuvodTabl;
//---------------------------------------------------------------------------
__fastcall TVuvodTabl::TVuvodTabl(TComponent* Owner)
	: TForm(Owner)
{
UVuvod->Active=true;
}
//---------------------------------------------------------------------------
void __fastcall TVuvodTabl::Timer1Timer(TObject *Sender)
{
UVuvod->Execute();
Vuvod->Columns[0]->Width=100;
Vuvod->Columns[1]->Width=80;
Vuvod->Columns[2]->Width=80;
Vuvod->Columns[3]->Width=80;
Vuvod->Columns[0]->Header=(L"Назва");
Vuvod->Columns[1]->Header=(L"Кількість");
Vuvod->Columns[2]->Header=(L"За одиницю");
Vuvod->Columns[3]->Header=(L"Ціна");
}
//---------------------------------------------------------------------------
void __fastcall TVuvodTabl::IBackClick(TObject *Sender)
{
Timer1->Enabled=false;
Tab->Visible=true;
VuvodTabl->Close();
}
//---------------------------------------------------------------------------

